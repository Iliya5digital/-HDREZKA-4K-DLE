<a class="poster grid-item d-flex fd-column has-overlay" href="{link}">
    <div class="poster__img img-responsive img-responsive--portrait img-fit-cover anim">
        <img data-src="{image-1}" src="{theme}/images/no-img.png" loading="lazy" alt="{title}">
         
        <div class="poster__trailer js-show-trailer" data-trl="https://www.youtube.com/watch?v=-LkHS8geUjQ"><div class="fal fa-play pi-center"></div><span>Трейлер</span></div>
        <div class="poster__btn-info anim pi-center js-show-info"><div class="fal fa-info-circle"></div></div>
        <div class="has-overlay__icon anim pi-center"><div class="fal fa-play pi-center"></div></div>
    </div>
    <div class="poster__desc">
        <h3 class="poster__title ws-nowrap">{title}</h3>
        <div class="poster__subtitle d-flex ai-center">
            <div class="poster__meta flex-grow-1 ws-nowrap">2022, Фильм</div>
        </div>
    </div>
</a>