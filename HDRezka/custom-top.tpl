<div class="bslide img-responsive img-fit-cover img-mask">
    <div class="bslide__desc">
        <h2 class="bslide__title ws-nowrap">{title}</h2>
        [rating-type-4]<div class="bslide__rating poster__rating"><div class="js-count-rating d-none">{ratingscorelikes}{vote-num}</div></div>[/rating-type-4]
        <p class="bslide__text line-clamp">{short-story limit="250"}</p>
		<div class="bslide__btns d-flex icon-at-right">
            <a href="{full-link}" class="bslide__btn-watch btn">Смотреть онлайн <span class="fal fa-long-arrow-right"></span></a>
            <button class="bslide__btn-trailer js-show-trailer" data-trl="https://www.youtube.com/watch?v=-LkHS8geUjQ">Трейлер</button>
		</div>
	</div>
	<img src="{image-1}" loading="lazy" alt="{title}">
</div>